doctype html
html(lang='es')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3', crossorigin='anonymous')
    title PUG

  body.container.bg-light
    nav.navbar.navbar-expand-lg.navbar-light.bg-light 
      div.container-fluid
        button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation")
          span.navbar-toggler-icon 
        div.collapse.navbar-collapse(id="navbarNav") 
          ul.navbar-nav
            li.nav-item 
              a.nav-link(aria-current='page', href='/') Formulario    
            li.nav-item 
              a.nav-link(href='/productos') Productos
    h2.text.mt-2 Cargar Producto
    div.row
      div.col-4
        form(action='/api/productos', method='post')
          .mb-3
            label.form-label(for='nombre') Nombre
            input.form-control(type='text', name='nombre')
          .mb-3
            label.form-label(for='precio') Precio
            input.form-control(type='number', name='precio')
          .mb-3
            label.form-label(for='uri') URL Imagen
            input.form-control(type='text', name='uri')
          button.btn.btn-primary(type='submit') Cargar producto

    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js', integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p', crossorigin='anonymous')